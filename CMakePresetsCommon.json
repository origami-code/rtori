{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "default-sccache",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER_LAUNCHER": {
                    "type": "STRING",
                    "value": "sccache"
                },
                "CMAKE_CXX_COMPILER_LAUNCHER": {
                    "type": "STRING",
                    "value": "sccache"
                }
            },
            "environment": {
                "RUSTC_WRAPPER": "sccache"
            }
        }
    ]
}